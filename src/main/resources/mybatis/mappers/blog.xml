<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="blog">
	
	<!-- default blog insert -->
	<insert id="insertByBlogDefault" parameterType="kr.co.jimmy.VO.BlogVO">
		<![CDATA[
			INSERT INTO blog
			VALUES ( #{id}
					,#{blogTitle}
					,#{logoFile}
			)
		]]>
	</insert>
	
	<!-- default blog -->
	<select id="selectByMemberId" parameterType="String" resultType="kr.co.jimmy.VO.BlogVO">
		<![CDATA[
			SELECT id, blogTitle, logoFile
			FROM blog
			WHERE id = #{id} 
		]]>
	</select>
	
	<!-- category selectAll -->
	<select id="selectByMainCategory" parameterType="int" resultType="kr.co.jimmy.VO.BlogPostVO">
		<![CDATA[
			SELECT postTitle, postContent ,regDate
			FROM post
			WHERE cateNo = #{cateNo} 
			ORDER BY regDate DESC
		]]>
	</select>
</mapper>